// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
	"name": "CyberLight Portfolio",
	"image": "mcr.microsoft.com/devcontainers/javascript-node:24-trixie",
	// 1. Пробрасываем порт Vite (по умолчанию 5173)
	"forwardPorts": [
		5173
	],
	// 2. Настройки VS Code внутри контейнера
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh"
			},
			// 3. Полезные расширения, которые поставятся сами
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
			]
		}
	},
	// 4. Команда, которая выполнится после создания контейнера
	// Сама установит npm install, чтобы ты не ждал
	// "postCreateCommand": "npm install",
	// Повышаем права, чтобы можно было ставить глобальные пакеты без sudo (опционально)
	"remoteUser": "node"
}
